{
  "extends": "./tsconfig.json",

  "exclude": [
    ".git/",
    ".idea/",
    ".yarn/cache/",
    ".yarn/sdks/",
    ".yarn/unplugged/",
    "node_modules/",
    "packages/*/node_modules/"
  ],

  "include": [
    "**/.eslintrc.cjs",
    "**/.eslintrc.json",
    "**/.prettierrc.json",
    "**/.yarnrc.yml",
    "**/*.cjs",
    "**/*.d.ts",
    "**/*.js",
    "**/*.json",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.yml"
  ]
}
